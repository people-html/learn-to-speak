<script>
  module.exports = {
    data: {
      // 当前正在播放的音乐
      audio: null,
      control:  null,
      ElastiStack: null,
      activePageIndex: 0,
    },
    created: function() {
      document.addEventListener('touchmove', (e) => {
        e.preventDefault()
      }, false)
      
      // 计算并设置dataBox宽度
      this.domList.dataBox.style.width = (this.domList.dataBox.childNodes.length - 1) * 60 + 'px'
      console.log(this.domList.dataBox.childNodes.length)
      // 计算打卡页面
      // 判断是手机页面还是电脑页面
      this.data.screenInfo = ozzx.tool.getScreenInfo()
      // 生成dom
      let dataBoxTemple = '<div class="middle-line"></div>'
      let historyTemple = ''
      let isFirst = true
      for(let key in dateList) {
        const element = dateList[key]
        if (isFirst) {
          this.changeCard(element)
          isFirst = false
        }
        dataBoxTemple += `<div class="date-item" @click="changeDete('${key}')">${key}</div>`
        historyTemple += `<div class="item"><div class="num">${key}</div><div class="text">学习有声</div><div class="icon-box"></div></div>`
      }
      document.getElementById('dataBox').innerHTML = dataBoxTemple
      this.domList.cardBox.innerHTML = historyTemple + '<div class="clear"></div>'
      // 延时设置打卡页面元素dom
      setTimeout(() => {
        this.domList.cardBox.style.width = 41 * (this.domList.cardBox.childNodes.length - 1) + 'px'
      }, 1000)
      // 刷新dom节点
      pgNameHandler(document.getElementById('dataBox'))
      
      // this.calculation()
      // 默认高亮第一页
      setTimeout(() => {
        document.getElementById('dataBox').children[1].classList.add('active')
      }, 0)
    },
    changeCard: function (cardList) {
      // console.log(cardList)
      let domTemple = ''
      let ind = 0
      for (let key in cardList) {
        const element = cardList[key]
        // 添加期目录
        // 如果没有title，则title为空
        if (!element.title) element.title = ""
        // 第一页固定是编者按
        if (++ind === 1) {
          // 判断是否有image
          if (element.img) {
            domTemple += `<li id="slideItem${ind}"><div class="note-left"></div><div class="title">${element.title}</div><div class="image-box"><img src="${element.img}"/></div><div class="content">${element.content}</div>`
          } else {
            domTemple += `<li id="slideItem${ind}"><div class="note-left"></div><div class="title">${element.title}</div><div class="content">${element.content}</div>`
          }
        } else {
          domTemple += `<li id="slideItem${ind}"><div class="content-left"><div class="num">${ind}</div></div><div class="title">${element.title}</div><div class="content">${element.content}</div>`
        }
        if (element.music) {
          domTemple += `<audio src="${element.music}" controls="controls"></audio>`
        }
        domTemple += `</li>`
      }
      document.getElementById('elasticstack').style.display = 'none'
      document.getElementById('elasticstack').innerHTML = domTemple
      this.calculation()
    },
    changeDete: function (dete) {
      // console.log(dateList, $.trim(dete))
      // console.log(`change dete to ${dete}`)
      this.changeCard(dateList[$.trim(dete)])
      // 取消掉所有子页码的活跃状态
      for(let ind = 0; ind < document.getElementById('dataBox').children.length; ind++) {
        const dom = document.getElementById('dataBox').children[ind]
        dom.classList.remove('active')
      }
      this.$el.classList.add('active')
    },
    calculation: function () {
      setTimeout(() => {
        // console.log(this.data.screenInfo.clientHeight)
        this.data.ElastiStack = new ElastiStack( document.getElementById('elasticstack'), {
          loop: false,
          ratioX: parseInt(this.data.screenInfo.clientWidth * 0.02),
          ratioZ: parseInt(this.data.screenInfo.clientWidth * -0.02),
          distDragBack: 100,
          distDragMax: 200,
          onUpdateStack: (activeIndex) => {
            // console.log(activeIndex)
            // 第一页的时候隐藏左箭头
            if (activeIndex === 0) {
              // console.log(this.data.ElastiStack.itemsCount - 1)
              this.domList.last.style.display = 'none'
            } else {
              this.domList.last.style.display = 'block'
            }
            // 最后一页的时候没有向右箭头
            if (activeIndex === this.data.ElastiStack.itemsCount - 1) {
              this.domList.next.style.display = 'none'
            } else {
              this.domList.next.style.display = 'block'
            }
            // 有记者按的关系需要加1
            activeIndex++
            // 停止当前播放的音乐
            if (this.data.audio !== null) {
              this.data.audio.pause()
              this.data.audio.src = ''
            }
            // 停止上一个动画
            if (this.data.control !== null) {
              this.data.control.next = false
            }
            // 查找文字区域
            const textBox = $(`#slideItem${activeIndex} .content`)
            // 查找音频区域
            const audio = $(`#slideItem${activeIndex} audio`)
            // console.log(textBox)
            // console.log(audio, activeIndex)
            if (audio.length > 0) {
              // 播放音乐
              this.data.audio = audio[0]
              this.data.audio.src = 'http://cunchu.site/resource/bgm.mp3'
              this.data.audio.play()
              
              if (textBox.length > 0) {
                // 滚动条长度
                const scrollHeight = textBox[0].scrollHeight
                // 超出长度
                const overflow = scrollHeight - textBox[0].clientHeight
                this.data.audio.ontimeupdate = (e) => {
                  textBox.scrollTop(this.data.audio.currentTime / this.data.audio.duration * overflow)
                }
              }
            }
          }
        })
        document.getElementById('elasticstack').style.display = 'block'
      }, 0)
    },
    nextCard: function () {
      this.data.ElastiStack.next()
    },
    lastCard: function () {
      this.data.ElastiStack.last()
    },
    openHistory: function () {
      this.domList.history.style.display = 'block'
      this.domList.showBox.style.display = 'none'
    },
    closeHistory: function () {
      this.domList.history.style.display = 'none'
      this.domList.showBox.style.display = 'block'
    }
  }
</script>


